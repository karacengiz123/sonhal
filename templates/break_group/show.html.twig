{% extends 'layout/base.html.twig' %}

{% block title %}BreakGroup{% endblock %}

{% block body %}

    <h1 style="padding: 20px">Mola Grubu</h1>

    <div style="padding: 20px;background-color: white">
        <a class="btn btn-info" style="float: right;margin-bottom: 20px" href="{{ path('break_group_index') }}">Listeye Geri Dön</a>

        <table class="table table-striped table-bordered">
        <tbody>

            <tr>
                <th style="width: 250px">İsim</th>
                <td>{{ break_group.name }}</td>
            </tr>
            <tr>
                <th>Maksimum Kullanıcı</th>
                <td>{{ break_group.maxUser }}</td>
            </tr>
            <tr>
                <th>Mola Limiti</th>
                <td>{{ break_group.breakLimit }}</td>
            </tr>
        </tbody>
    </table>


    <a  class="btn btn-warning" style="float: right;" href="{{ path('break_group_edit', {'id': break_group.id}) }}">Güncelle</a>

    <div style="float: right!important; margin-right: 10px;">
        {{ include('break_group/_delete_form.html.twig') }}</div>
        <br>
        <br>
    </div>
{% endblock %}
