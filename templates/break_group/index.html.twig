{% extends 'layout/base.html.twig' %}

{% block title %}BreakGroup index{% endblock %}

{% block body %}
    <h1 style="padding: 20px">Mola Grubu </h1>
<div style="padding: 20px;background-color: white">
    <a  href="{{ path('break_group_new') }}"style="float: right!important; margin-bottom: 20px!important;"><button type="button" class="btn waves-effect waves-light btn-success">Yeni Oluştur</button></a>

    <table id="breakGroupTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Maksimum Kullanıcı</th>
                <th>Mola Sınırı</th>
                <th style="width: 230px!important; text-align: center">Eylemler</th>
            </tr>
        </thead>
        <tbody>
        {% for break_group in break_groups %}
            <tr>
                <td>{{ break_group.name }}</td>
                <td>{{ break_group.maxUser }}</td>
                <td>{{ break_group.breakLimit }}</td>
                <td>
                    <a class="btn btn-info" style="float: right;margin: 5px"  href="{{ path('break_group_show', {'id': break_group.id}) }}">Göster</a>
                    <a class="btn btn-warning"  style="float: right;margin: 5px" href="{{ path('break_group_edit', {'id': break_group.id}) }}">Güncelle</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Kayıt bulunamadı</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block customScript %}
    <script>
        $(document).ready(function() {
            $('#breakGroupTable').DataTable();
        } );


    </script>

{% endblock %}
