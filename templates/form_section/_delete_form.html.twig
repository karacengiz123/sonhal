<form method="post" action="{{ path('form_section_delete', {'id': form_section.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ form_section.id) }}">
    <button class="btn">Delete</button>
</form>
