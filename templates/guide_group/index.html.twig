{% extends 'layout/base.html.twig' %}

{% block title %}GuideGroup index{% endblock %}

{% block body %}
    <h1 style="padding: 20px">Rehber Grubları</h1>
<div style="background-color: white;padding: 20px">
    <a class="btn btn-success" style="float: right!important;margin-bottom: 20px!important;" href="{{ path('guide_group_new') }}">Yeni Oluştur</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Yol</th>
                <th style="width:230px!important;text-align: center" >Eylemler</th>
            </tr>
        </thead>
        <tbody>
        {% for guide_group in guide_groups %}
            <tr>
                <td>{{ guide_group.name }}</td>
                <td>{{ guide_group.route }}</td>
                <td>
                    <a  class="btn btn-info" style="float: right;margin: 5px" href="{{ path('guide_show_group', {"id": guide_group.id}) }}" target="_blank">Göster</a>
                    <a class="btn btn-warning" style="float: right;margin: 5px" href="{{ path('guide_group_edit', {'id': guide_group.id}) }}">Güncelle</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">kayıt bulunamadı</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}