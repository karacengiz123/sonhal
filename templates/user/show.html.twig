{% extends 'layout/base.html.twig' %}

{% block title %}Kullanıcı Detayları{% endblock %}

{% block body %}

    <h1 style="padding: 20px">Kullanıcı Detayları</h1>

<div  style="background-color: white;padding: 20px;margin-bottom: 20px;!important;">
    <a class=" btn btn-info" style="float: right;margin-bottom: 20px" href="{{ path('user_index') }}">Listeye geri dön</a>


    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th style="width: 250px">Tc Kimlik No</th>
                <td>{{ userProfile.tckn }}</td>
            </tr>
            <tr>
                <th style="width: 250px">İsim</th>
                <td>{{ userProfile.firstName }}</td>
            </tr>
            <tr>
                <th style="width: 250px">Soy İsim</th>
                <td>{{ userProfile.lastName }}</td>
            </tr>
            <tr>
                <th style="width: 250px">Dahili No</th>
                <td>{{ userProfile.extension }}</td>
            </tr>
            <tr>
                <th style="width: 250px">Kullanıcı Adı</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>LastLogin</th>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-warning" style="padding: 10px; float: right; margin-right: 5px!important;"  href="{{ path('user_edit', {'id': user.id}) }}">Güncelle</a>
    {{ include('user/_delete_form.html.twig') }}
    <br>
    <br>
</div>



{% endblock %}
