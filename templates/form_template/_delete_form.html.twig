<form method="post" action="{{ path('form_template_delete', {'id': form_template.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ form_template.id) }}">
    <button class="btn">Delete</button>
</form>
