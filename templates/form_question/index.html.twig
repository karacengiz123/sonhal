{% extends 'base.html.twig' %}

{% block title %}FormQuestion index{% endblock %}

{% block body %}
    <h1>FormQuestion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for form_question in form_questions %}
            <tr>
                <td>{{ form_question.id }}</td>
                <td>{{ form_question.title }}</td>
                <td>
                    <a href="{{ path('form_question_show', {'id': form_question.id}) }}">show</a>
                    <a href="{{ path('form_question_edit', {'id': form_question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('form_question_new') }}">Create new</a>
{% endblock %}
