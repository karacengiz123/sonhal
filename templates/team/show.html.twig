{% extends 'layout/base.html.twig' %}

{% block title %}Takım Detayları{% endblock %}

{% block body %}
    <br/>



    <h1>Takım Detayları</h1>
    <br/>
<div class="col-lg-12" style="background-color: white">
    <a class=" btn btn-info" style="float: right;margin-bottom: 20px;margin-top: 10px;"  href="{{ path('team_index') }}">Listeye geri dön</a>

    <table class="table table-striped table-bordered">
        <tbody>

            <tr>
                <th>Takım Adı</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Mola Limiti (Kişi Adet)</th>
                <td>{{ team.breakLimit }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-warning" style="padding: 10px; float: right; margin-top: 10px; margin-right: 5px!important;"  href="{{ path('team_edit', {'id': team.id}) }}">Güncelle</a>
    {{ include('team/_delete_form.html.twig') }}
    <br>
    <br>
    <br>
</div>


{% endblock %}
