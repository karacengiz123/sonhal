{% extends 'layout/base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
<h1 style="padding: 20px">Rol</h1>

<div style="padding: 20px;background-color: white">
    <a class="btn btn-info" style="float: right;margin-bottom: 20px" href="{{ path('group_index') }}">Listeye Geri Dön</a>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ group.name }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ group.roles ? group.roles|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
        </tbody>
    </table>
    <a  class="btn btn-warning" style="float: right;" href="{{ path('group_edit', {'id': group.id}) }}">Güncelle</a>

    <div style="float: right!important; margin-right: 10px;">
        {{ include('group/_delete_form.html.twig') }}
    </div>
    <br>
    <br>
</div>
{% endblock %}
