{% extends 'base.html.twig' %}

{% block title %}Evaluation{% endblock %}

{% block body %}
    <h1>Evaluation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evaluation.id }}</td>
            </tr>
            <tr>
                <th>SourceDestID</th>
                <td>{{ evaluation.sourceDestID }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ evaluation.score }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ evaluation.comment }}</td>
            </tr>
            <tr>
                <th>EvaluatorComment</th>
                <td>{{ evaluation.evaluatorComment }}</td>
            </tr>
            <tr>
                <th>EvaluativeComment</th>
                <td>{{ evaluation.evaluativeComment }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ evaluation.duration }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ evaluation.phoneNumber }}</td>
            </tr>
            <tr>
                <th>CallDate</th>
                <td>{{ evaluation.callDate ? evaluation.callDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ evaluation.createdAt ? evaluation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ evaluation.updatedAt ? evaluation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ evaluation.deletedAt ? evaluation.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evaluation_index') }}">back to list</a>

    <a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}">edit</a>

    {{ include('evaluation/_delete_form.html.twig') }}
