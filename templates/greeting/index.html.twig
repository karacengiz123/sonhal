{% extends 'base.html.twig' %}

{% block title %}Greeting index{% endblock %}

{% block body %}
    <h1>Greeting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for greeting in greetings %}
            <tr>
                <td>{{ greeting.id }}</td>
                <td>{{ greeting.name }}</td>
                <td>
                    <a href="{{ path('greeting_show', {'id': greeting.id}) }}">show</a>
                    <a href="{{ path('greeting_edit', {'id': greeting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('greeting_new') }}">Create new</a>
{% endblock %}
