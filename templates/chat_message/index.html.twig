{% extends 'base.html.twig' %}

{% block title %}ChatMessage index{% endblock %}

{% block body %}
    <h1>ChatMessage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sender</th>
                <th>Message</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chat_message in chat_messages %}
            <tr>
                <td>{{ chat_message.id }}</td>
                <td>{{ chat_message.sender }}</td>
                <td>{{ chat_message.message }}</td>
                <td>{{ chat_message.createdAt ? chat_message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ chat_message.updatedAt ? chat_message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ chat_message.deletedAt ? chat_message.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('chat_message_show', {'id': chat_message.id}) }}">show</a>
                    <a href="{{ path('chat_message_edit', {'id': chat_message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chat_message_new') }}">Create new</a>
{% endblock %}
